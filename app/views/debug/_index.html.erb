        </div> <!-- end .modal-body -->

        <div class="modal-footer">
            <button class='btn btn-primary' data-dismiss="modal">close</button>
        </div> <!-- end .modal-footer -->

    </div> <!-- end .modal-content -->
</div> <!-- end .modal-dialog -->
<%= form_for @testimonial, html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
        <label for="inputEmail1" class="col-md-2 control-label">From</label>
        <div class="col-md-10">
            <%= f.text_field :from, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail1" class="col-md-2 control-label">Content</label>
        <div class="col-md-10">
            <%= f.text_area :body, size: '40x10', class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>
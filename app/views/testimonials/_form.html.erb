<%= form_for @testimonial, html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
        <%= f.label :from, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
            <%= f.text_field :from, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :content, class: 'col-md-2 control-label' %>
        <div class="col-md-10">
            <%= f.text_area :body, size: '40x10', class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <%= f.button :submit, class: 'btn btn-primary' %>
            <%= link_to 'cancel', (@testimonial.new_record? ? new_testimonial_path : edit_testimonial_path(@testimonial)), class: 'btn btn-link' %>
        </div>
    </div>
<% end %>
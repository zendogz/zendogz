<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.note %></td>
        <td><%= link_to 'Show', dog_note_path(@dog, note) %></td>
        <td><%= link_to 'Edit', edit_dog_note_path(@dog, note) %></td>
        <td><%= link_to 'Destroy', dog_note_path(@dog, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_dog_note_path(@dog) %>

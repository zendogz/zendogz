<h1>Listing people</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>City</th>
      <th>Postal</th>
      <th>Phone home</th>
      <th>Phone cell</th>
      <th>Phone work</th>
      <th>Authority</th>
      <th>Born on</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.address %></td>
        <td><%= person.city %></td>
        <td><%= person.postal %></td>
        <td><%= person.phone_home %></td>
        <td><%= person.phone_cell %></td>
        <td><%= person.phone_work %></td>
        <td><%= person.authority %></td>
        <td><%= person.born_on %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

